    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <!--    <item name="android:textSize">@dimen/_9ssp</item>-->
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/avenir_nextitpro_regular</item>
        <item name="android:textColor">@color/dusk</item>
    </style>

    <style name="MyMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/dusk</item>
        <item name="fontFamily">@font/avenir_nextitpro_regular</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:listPreferredItemHeightSmall">30dp</item>
        <item name="android:divider">@color/View_color</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="MyMenuStyle600" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/dusk</item>
        <item name="fontFamily">@font/avenir_nextitpro_regular</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:listPreferredItemHeightSmall">50dp</item>
        <item name="android:divider">@color/View_color</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="MyMenuStyle720" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/dusk</item>
        <item name="fontFamily">@font/avenir_nextitpro_regular</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:listPreferredItemHeightSmall">50dp</item>
        <item name="android:divider">@color/View_color</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/dusk</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyCustomTabTextAppearance720" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/dusk</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyCustomTabTextAppearance600land" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/dusk</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">-->

    <!--    </style>-->

    <style name="edittextToolbar" parent="ThemeOverlay.Material3.TextInputEditText">


    </style>


    <style name="calendar_custom_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/black</item>                   <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/black</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/black</item>    <!--days of the week-->
    </style>

</resources>