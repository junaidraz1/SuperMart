<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dim"
    tools:context=".Fragment.MilkCheeseAndYogurtFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/_8sdp">

            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/ic_baseline_arrow_back_24" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_titleTopBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/avenir_nextitpro_bold"
                android:text="Milk Cheese And Yogurt"
                android:textColor="@color/dusk"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:id="@+id/ll_menu"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentEnd="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_round_menu_24" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/hint"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layoutAddPatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_layout_bg"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/dusk"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabMode="scrollable"
            app:tabTextAppearance="@style/MyCustomTabTextAppearance" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/gray_bg" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpagerAddPatient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/_55sdp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>
<!--    <include layout="@layout/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>-->

</RelativeLayout>
