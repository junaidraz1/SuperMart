<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_rounded_corners"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/rl_closeIcon"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_close_24" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nexa_regular"
            android:text="Dialog Title"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

    </RelativeLayout>

    <View
        android:id="@+id/v_horizontalline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/rl_dialogTitle"
        android:background="@color/hint" />

    <RelativeLayout
        android:id="@+id/rl_dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_horizontalline"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_dialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:fontFamily="@font/nexa_regular"
            android:gravity="center_horizontal"
            android:text="Dialog Message"
            android:textColor="@color/dusk"
            android:textSize="@dimen/_10ssp" />

    </RelativeLayout>

    <View
        android:id="@+id/v_horizontalline2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/rl_dialogMessage"
        android:background="@color/hint" />

    <RelativeLayout
        android:id="@+id/rl_dialogBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_horizontalline2"
        android:background="@drawable/bottom_rounded_corners"
        android:padding="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dialogBtn"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/roundedrectangle_bg"
            android:backgroundTint="@color/MintGreen"
            android:fontFamily="@font/nexa_regular"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp" />

    </RelativeLayout>

</RelativeLayout>