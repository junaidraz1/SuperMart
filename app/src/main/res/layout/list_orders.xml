<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_dim"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/CV_Order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nexa_bold"
                        android:text="Order ID"
                        android:textColor="@color/MintGreen"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/tv_orderID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/avenir_nextitpro_regular"
                        android:text="5463527"
                        android:textColor="@color/dusk"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nexa_bold"
                        android:gravity="center"
                        android:text="Date|Time"
                        android:textColor="@color/MintGreen"
                        android:textSize="@dimen/_10ssp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_OrderDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/avenir_nextitpro_regular"
                            android:gravity="center"
                            android:text="5-4-2022"
                            android:textColor="@color/dusk"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/tv_VerticalLineOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/avenir_nextitpro_regular"
                            android:gravity="center"
                            android:text="|"
                            android:textColor="@color/dusk"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/tv_OrderTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/avenir_nextitpro_regular"
                            android:gravity="center"
                            android:text="9:34 am"
                            android:textColor="@color/dusk"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/nexa_bold"
                        android:text="Status"
                        android:textColor="@color/MintGreen"
                        android:textSize="@dimen/_10ssp" />


                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/avenir_nextitpro_regular"
                        android:text="Delivered"
                        android:textColor="@color/dusk"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/hint"
                android:layerType="software" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_productName1"
                        android:layout_toStartOf="@+id/ll_price1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/nexa_bold"
                        android:text="Muh"
                        android:textColor="@color/dusk"
                        android:textSize="@dimen/_11ssp" />

                    <LinearLayout
                        android:id="@+id/ll_price1"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_Rs1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_nextitpro_bold"
                            android:text="Rs : "
                            android:textColor="@color/dusk"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:id="@+id/tv_productPrice1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_nextitpro_bold"
                            android:text="200"
                            android:textColor="@color/dusk"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="0.2">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_productOrder1"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/dairy_product"
                        app:riv_corner_radius="@dimen/_80ssp" />
                </RelativeLayout>
                <!--  <ImageView
                      android:id="@+id/iv_productOrder1"
                      android:layout_width="0dp"
                      android:layout_height="@dimen/_50sdp"
                      android:layout_weight="0.2"
                      android:background="@drawable/grocery" />
  -->
            </LinearLayout>

            <View
                android:id="@+id/view_orders"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/horizantal_dashed_line"
                android:layerType="software" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8">

                    <TextView
                        android:id="@+id/tv_productName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/ll_price2"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/nexa_bold"
                        android:text="Muhammad Zohaib Ahmed (Private)"
                        android:textColor="@color/dusk"
                        android:textSize="@dimen/_11ssp" />

                    <LinearLayout
                        android:id="@+id/ll_price2"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_Rs2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_nextitpro_bold"
                            android:text="Rs : "
                            android:textColor="@color/dusk"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:id="@+id/tv_productPrice2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_nextitpro_bold"
                            android:text="200"
                            android:textColor="@color/dusk"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="0.2">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_productOrder2"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/dairy_product"
                        app:riv_corner_radius="@dimen/_80ssp" />
                </RelativeLayout>
                <!--   <ImageView
                       android:id="@+id/iv_productOrder2"
                       android:layout_width="0dp"
                       android:layout_height="@dimen/_50sdp"
                       android:layout_weight="0.2"
                       android:background="@drawable/grocery" />
   -->
            </LinearLayout>
            <!--     <View
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/_5sdp"
                     android:layout_marginTop="@dimen/_2sdp"
                     android:background="@drawable/horizantal_dashed_line"
                     android:layerType="software" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <net.cachapa.expandablelayout.ExpandableLayout
                        android:id="@+id/expandableLayout_Order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:el_duration="1000"
                        app:el_expanded="false"
                        app:el_parallax="0.5">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_expandableLayout_Order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </net.cachapa.expandablelayout.ExpandableLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_viewOrderDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/roundedrectangle_bg"
                            android:fontFamily="@font/avenir_nextitpro_regular"
                            android:text="Order Details"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8ssp" />
                    </LinearLayout>
                </LinearLayout>

                <!--  <LinearLayout
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="end"
                      android:layout_marginEnd="@dimen/_2sdp"
                      android:layout_weight="0.5"
                      android:gravity="end"
                      android:orientation="vertical">

                      <Button
                          android:id="@+id/Btn_Confirm_PA"
                          android:layout_width="wrap_content"
                          android:layout_height="@dimen/_20sdp"
                          android:background="@drawable/green_roundedrectangle_btn"
                          android:fontFamily="@font/avenir_nextitpro_regular"
                          android:text="Confirm"
                          android:textAllCaps="false"
                          android:textColor="@color/white"
                          android:textSize="@dimen/_9ssp" />

                      <Button
                          android:id="@+id/Btn_Cancel_PA"
                          android:layout_width="wrap_content"
                          android:layout_height="@dimen/_20sdp"
                          android:layout_marginTop="@dimen/_2sdp"
                          android:background="@drawable/red_roundedrectangle_btn"
                          android:fontFamily="@font/avenir_nextitpro_regular"
                          android:text="@string/Cancel"
                          android:textAllCaps="false"
                          android:textColor="@color/white"
                          android:textSize="@dimen/_9ssp" />

                  </LinearLayout>
  -->
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_expanded_Orders"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="-35dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_rotate_Orders"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_gravity="center"
            android:background="@drawable/ic_arrow_down_orange" />
    </LinearLayout>
</LinearLayout>