                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:layout_toEndOf="@+id/tv_viewAll"
                                    android:background="@drawable/ic_navigate_next_blue_24dp" />

                            </RelativeLayout>

